	<groupId>com.microservices.demo</groupId>
	<artifactId>microservices-demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>microservices-demo</name>
	<description>Microservices demo project for Spring Boot</description>
	<packaging>pom</packaging>

	<properties>
		<java.version>11</java.version>

		<maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
		<twitter4j.version>4.0.7</twitter4j.version>
		<lombok.version>1.18.16</lombok.version>

		<spring-boot.version>2.3.9.RELEASE</spring-boot.version>
		<spring-kafka.version>2.6.6</spring-kafka.version>
		<spring-retry.version>1.3.1</spring-retry.version>
		<kafka-avro-serializer.version>5.5.3</kafka-avro-serializer.version>
		<spring-cloud.version>2.2.6.RELEASE</spring-cloud.version>
		<spring-cloud-dependencies.version>Hoxton.SR9</spring-cloud-dependencies.version>
		<spring-cloud-starter-circuitbreaker-reactor-resilience4j.version>1.0.4.RELEASE</spring-cloud-starter-circuitbreaker-reactor-resilience4j.version>
		<elastic.version>7.9.1</elastic.version>
