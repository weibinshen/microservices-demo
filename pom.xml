		<micrometer-registry-prometheus.version>1.5.2</micrometer-registry-prometheus.version>
		<logstash-logback-encoder.version>6.5</logstash-logback-encoder.version>

	</properties>

	<repositories>
		<repository>
			<id>confluent</id>
			<url>https://packages.confluent.io/maven/</url>
		</repository>
